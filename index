    <!-- Logic Script -->
    <script>
        function calculateVAT() {
            const opDate = document.getElementById('opDate').value;
            const invDate = document.getElementById('invDate').value;
            const resultBox = document.getElementById('resultBox');
            const resTitle = document.getElementById('resTitle');
            const resDesc = document.getElementById('resDesc');

            if (!opDate || !invDate) {
                alert("Per favore seleziona entrambe le date.");
                return;
            }

            resultBox.classList.remove('hidden');
            // Small delay to allow transition to work if it was hidden
            setTimeout(() => {
                resultBox.classList.add('show');
            }, 10);
            
            // Logic based on PDF
            // Case 1: Operation Dec, Receipt Dec
            if (opDate === 'dec25' && invDate === 'dec25') {
                resultBox.className = 'result-card show mt-8 bg-green-50 rounded-2xl p-6 border border-green-200 status-ok';
                resTitle.textContent = "Detrazione a Dicembre 2025";
                resDesc.innerHTML = "Ottimo. Poiché hai ricevuto la fattura nello stesso mese dell'operazione, puoi detrarre l'IVA nella liquidazione di <strong>Dicembre 2025</strong> (scadenza 16 Gennaio 2026).";
            }
            // Case 2: Operation Dec, Receipt Jan
            else if (opDate === 'dec25' && invDate === 'jan26_early') {
                resultBox.className = 'result-card show mt-8 bg-blue-50 rounded-2xl p-6 border border-blue-200 status-warn';
                resTitle.textContent = "Detrazione a Gennaio 2026";
                resDesc.innerHTML = "Attenzione: Anche se l'operazione è del 2025, la fattura è arrivata nel 2026. Per l'eccezione di fine anno, devi detrarre l'IVA nella liquidazione di <strong>Gennaio 2026</strong>. <br><br><em>Il fornitore verserà l'IVA nel 2025, ma tu la recuperi nel 2026.</em>";
            }
            // Case 3: Operation Jan, Receipt Jan
            else if (opDate === 'jan26' && invDate === 'jan26_early') {
                resultBox.className = 'result-card show mt-8 bg-gray-50 rounded-2xl p-6 border border-gray-200 status-ok';
                resTitle.textContent = "Detrazione a Gennaio 2026";
                resDesc.innerHTML = "Regime ordinario. Operazione e fattura sono entrambe nel 2026. Detrai regolarmente a Gennaio.";
            }
            // Fallback
            else {
                resultBox.className = 'result-card show mt-8 bg-gray-50 rounded-2xl p-6 border border-gray-200';
                resTitle.textContent = "Caso non standard";
                resDesc.textContent = "Verifica i dati inseriti o contatta lo studio per una casistica specifica.";
            }
        }
    </script>
